{
  "manifest_version": 2,
  "name": "Twitter Farsi Fonts",
  "version": "1.0",
  "author": "Saeed Vaziry",
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "128": "images/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://www.twitter.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "css/fonts.css"
      ]
    }
  ]
}